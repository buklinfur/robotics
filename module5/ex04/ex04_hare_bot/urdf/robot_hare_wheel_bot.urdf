<?xml version="1.0"?>
<robot name="robot_hare_wheel_bot">

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.06"/>
      <mass value="3.0"/>
      <inertia ixx="0.05" ixy="0" ixz="0"
               iyy="0.08" iyz="0"
               izz="0.10"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.25 0.18 0.12"/>
      </geometry>
      <material name="body">
        <color rgba="0.6 0.6 0.7 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.25 0.18 0.12"/>
      </geometry>
    </collision>
  </link>

  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.05" length="0.04"/></geometry>
      <material name="wheel"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.05" length="0.04"/></geometry>
      <material name="wheel"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.05" length="0.04"/></geometry>
      <material name="wheel"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.05" length="0.04"/></geometry>
      <material name="wheel"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.10 0.11 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.10 0.11 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.10 -0.11 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.10 -0.11 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
